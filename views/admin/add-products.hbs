<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <form  action="/admin/add" method="post" enctype="multipart/form-data" style="width: 60%; padding-top: 8%; align-items: center;" class="m-auto">

                <h1 style="text-align: center;">Enter Product Detailes...</h1>

                <div class="form-group">
                    <label for="exampleInputPassword1">Product_Name</label>
                    <input type="text" name="name" class="form-control" placeholder="Product Name">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Product_Discription</label>
                    <input type="text" name="discription" class="form-control" placeholder="Product Discription"
                        style="height: 100px;">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Product_Price</label>
                    <input type="number" name="price" class="form-control" placeholder="Product Price">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Product Image</label>
                    <input type="file" name="image" class="form-control" placeholder="Product Image">
                </div>

                <div>
                    <button type="submit" class="btn btn-primary mt-2" style="width: 100%;">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>