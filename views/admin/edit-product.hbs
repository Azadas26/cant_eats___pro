<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <form action="/admin/edit?id={{products._id}}" method="post" enctype="multipart/form-data"
                style="width: 60%; padding-top: 8%; align-items: center;" class="m-auto">

                <h1 style="text-align: center;">Edit Product Detailes...</h1>

                <div class="form-group">
                    <label for="exampleInputPassword1">Product_Name</label>
                    <input type="text" name="name" class="form-control" value="{{products.name}}">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Product_Discription</label>
                    <input type="text" name="discription" class="form-control" value="{{products.discription}}"
                        style="height: 100px; scroll-behavior: auto;">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Product_Price</label>
                    <input type="number" name="price" class="form-control" value="{{products.price}}">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Product Image</label>
                    <img src="/Admin_image/{{products._id}}.jpg" alt="" style="width: 200px; height: 200px;">
                    <input type="file" name="image" class="form-control mt-4" placeholder="Product Image">
                </div>
                 

                <div>
                    <button type="submit" class="btn btn-primary mt-2" style="width: 100%;">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>