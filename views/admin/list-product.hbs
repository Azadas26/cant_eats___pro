<div class="container-fluid">
    <div class="row">

        <div class="m-auto">
            <a href="/admin/add" class="mt-4 btn btn-success">Add_Products</a>
        </div>
        <div class="col-md-12" style="text-align: center;">
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Discription</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        <th scope="col">Coose Option</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each products}}
                    <tr>

                        <td>{{@index}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.discription}}</td>
                        <td>{{this.price}}</td>
                        <td><img src="/Admin_image/{{this._id}}.jpg" alt="" style="width: 200px; height: 200px;"></td>
                        <td>
                            <a href="/admin/delete?id={{this._id}}" class="btn btn-danger mt-5"
                                onclick="return confirm('are you sure to delet thi {{this.name}}??')">Delete</a>
                            <a href="/admin/edit?id={{this._id}}" class="btn btn-primary mt-2">Edit</a>
                        </td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>